<!-- ======= Gallery Section ======= -->
    <section id="gallery" class="gallery">

      <div class="container" data-aos="fade-up">
        
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
          <h2 class="section-title text-center font-bold text-4xl px-3">Actualit√©s</h2>      
        </div>
      </div>

      <div class="container-fluid" data-aos="fade-up" data-aos-delay="100">
        <div class="row g-0">
        
          <% @HomeArticles.each do |homeArticle| %>
            <div class="col-lg-3 col-md-4">
              <div class="gallery-item">
                <%= link_to article_path(homeArticle), class:"gallery-lightbox" do %>
                <% if homeArticle.heroImg.attached? %>
                  <%= image_tag(homeArticle.heroImg, class:"img-fluid") %>
                  <% else %>
                    <%= image_tag "media/2.jpeg", class:"img-fluid", alt:"" %>
                <% end %>
                <% end %>
              </div>
            </div>
            
          <% end %>
        </div>
      </div>
    </section><!-- End Gallery Section -->