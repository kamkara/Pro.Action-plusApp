<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="description" content="<%= description %>">
    <meta name="keywords" content="<%= keywords %>">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>

    <!-- CDN-->
    <link href="https://cdn.jsdelivr.net/npm/daisyui@2.38.1/dist/full.css" rel="stylesheet" type="text/css"/>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/flowbite@1.3.3/dist/flowbite.js"></script>
    <%= render "shared/layouts/header" %>
    <link rel="canonical" href="https://getbootstrap.com/docs/5.2/examples/blog/">

    <!-- Favicon-->
    <%= favicon_link_tag asset_path('logo/flavico-action.png') %>

    <!-- Analytics-->
    <%= render "shared/analytics/analytics" %>

  </head>

  <body>
  <style type="text/css">
      @media only screen and(min-width: 1025px) {
          .hero--video-donate-form {
              --hero_text_color: #fff;
              --hero_bg_color: #000;
          }

          .hero--video-overlay {
              --hero_bg_color: #000;
          }
      }
  </style>

    <%= yield %>

  <!--Footer  -->
  <%= render "shared/layouts/footer" %>

  </body>
</html>
