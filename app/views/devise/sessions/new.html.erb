<!-- Onglet Title -->
<% @title="Connectez-vous" %>

<!-- component -->
<section class="flex flex-col md:flex-row h-screen items-center">

    <div class="bg-indigo-600 hidden lg:block w-full md:w-1/2 xl:w-2/3 h-screen">
        <%= image_tag "congo-popup.png", alt:"", class:"w-full h-full object-cover"  %>
    </div>

    <div class="bg-white w-full md:max-w-md lg:max-w-full md:mx-0 md:w-1/2 xl:w-1/3 h-screen px-6 lg:px-16 xl:px-12
                                flex items-center justify-center">

        <div class="w-full h-100 border p-2">
            <h1 class="text-xl md:text-2xl font-bold leading-tight mt-12">Connectez-vous</h1>

            <%= form_for(resource, as: resource_name, class:"mt-6", inline_errors: true, url: session_path(resource_name)) do |f| %>
                <!-- Notice error-->

                <div>
                    <label class="block text-gray-700">Addresse Email</label>

                    <%= f.email_field :email, placeholder:"Entrez Addresse Email ",
           class:"w-full px-4 py-2 rounded-lg bg-gray-200 mt-2 border 
           focus:border-none focus:bg-white focus:outline-none",
            autofocus: true, hide_label:true
             %>
                </div>

                <div class="mt-4">
                    <label class="block text-gray-700">Mot de passe</label>
                    <%= f.password_field :password,  placeholder:"*************", minlength:"6",
           class:"w-full px-4 py-2 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500
                focus:bg-white focus:outline-none", hide_label: true %>
                </div>

                <div class="text-right mt-2">
                    <a href="#" class="text-sm font-semibold text-gray-700 hover:text-blue-700 focus:text-blue-700">
                        Entrez un mot de passe superieur à 8 caractères</a>
                </div>

                <%= f.submit "Se Connecter",
          class:"w-full block bg-blue-500 hover:bg-blue-400 focus:bg-blue-400 text-white font-semibold rounded-lg
              px-4 py-2 mt-6" %>

            <% end %>
        </div>
    </div>
</section>

